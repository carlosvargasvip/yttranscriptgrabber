{
  "name": "youtube-captions-server",
  "version": "1.0.0",
  "description": "Local server for YouTube captions extraction",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t youtube-captions-server .",
    "docker:run": "docker run -p 3000:3000 youtube-captions-server",
    "docker:compose": "docker-compose up -d"
  },
  "dependencies": {
    "express": "^4.18.2",
    "youtube-captions-scraper": "^2.0.3",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
